<%- include("../includes/head.ejs") %>

</head>




<body>

    <%- include("../includes/navbar.ejs") %>

    <main>
        <div class="container">
            <% if( error !== "noError" ) { %>
                <h5 class="form-error-text"> <%= error %> </h5>
            <% } %>
            <h4 class="form-title-text">Send email to all our users</h4>
            <div class="row">
                <form action="/sendEmail" method="POST" class="col s6 offset-m4">
                  <div class="row">
                    <div class="input-field col s6">
                      <input name="subject" id="subject" type="text" class="validate">
                      <label for="subject">Subject</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <textarea name="content" id="content" class="materialize-textarea" data-length="900"></textarea>
                      <label for="content">Content</label>
                    </div>
                  </div>
                  <button class="btn waves-effect waves-light" type="submit" name="action">Send email
                    <i class="material-icons right"></i>
                  </button>
                </form>
              </div>

        </div>
        
    </main>



</body>
<script>
  $(document).ready(function() {
   $('textarea#description').characterCounter();
 });
</script>
</html>