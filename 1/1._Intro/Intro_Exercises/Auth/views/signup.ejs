<%- include("./includes/head.ejs") %>
</head>


<body>

    <%- include("./includes/navbar.ejs") %>

    <main>
        <div class="container">
            <% if( error !== "noError" ) { %>
                <h5 class="main-text"> <%= error %> </h5>
            <% } %>
            <h4 style="padding-left: 10.7em; padding-top: 2em;" class="main-text">Signup</h4>
            <div class="row">
                <form action="/signup" method="POST" class="col s6 offset-m4">
                  <div class="row">
                    <div class="input-field col s6">
                      <input name="username" id="username" type="text" class="validate">
                      <label for="username">Username</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s6">
                      <input name="password" id="password" type="password" class="validate">
                      <label for="password">Password</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s6">
                      <input name="passwordRepeat" id="passwordRepeat" type="password" class="validate">
                      <label for="passwordRepeat">Repeat password</label>
                    </div>
                  </div>
                  <button class="btn waves-effect waves-light" type="submit" name="action">Create user
                    <i class="material-icons right"></i>
                  </button>
                </form>
              </div>

        </div>
        
    </main>
</body>
</html>