<%- include("../includes/head.ejs") %>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body>
    
    
    
    <div class="main-text grey lighten-4">
        <%- include("../includes/navbar.ejs") %>
        <div class="container">
            <div class="row">
            <% for (let dog of dogs) { %>
 
                    <div class="col s12 m4">
                      <div class="card">
                        <div class="card-image">
                          <img class="dog-card-image" src="<%= dog.imageUrl %>">
                          <% if ( isAdmin === true) { %>
                            <form action="/deleteDog/<%= dog.id %>" method="POST">
                            <button type="submit" class="btn-floating halfway-fab waves-effect waves-light red">
                              <i class="material-icons">delete</i>
                            </button></form>
                          
                          <% } %>
                        </div>
                        <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4"><%= dog.breed %></span>
                          <p> <%= dog.description %></p>
                        </div>
                      </div>
                    </div>
            <% } %>
        </div>
        </div>
    </div>

</body>
</html>